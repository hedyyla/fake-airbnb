<div class="container listing-banner">
  <div class="navbar host-nav mt-4">
    <%= link_to "Dashboard", host_bookings_path %>
    <%= link_to "Stats",  stats_bookings_path %>
    <%= link_to "Inbox", inbox_bookings_path %>
    <%= link_to "Your Listing",  host_listing_bookings_path %>
    <a href="#">Host Assist</a>
    <a href="#">Your Reservation</a>
    <a href="#">Profile</a>
    <a href="#">Account</a>
  </div>

  <div class="container listing-notification">
    <h1>Pending</h1>
    <p>2 new items - 87% response rate</p>

    <div class="mt-3">
      <% User.joins(:bookings).joins(:listings).where.not(id: current_user.id).distinct.each do |user| %>
        <% user.bookings.where(status: "pending").each do |booking| %>

          <div class="row mb-3">
            <div class="col-2">
              <img src="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8ZmFjZXN8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=1000&q=60" alt="" class="guest-avatar">
            </div>
            <div class="col-6">
              <h3>Request | <%= booking.guest.first_name %></h3>
              <p><%= booking.total_guests %> guests |
              <br>
              <%= booking.start_date %> - <%= booking.end_date %> | <%= booking.listing.location %> </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
