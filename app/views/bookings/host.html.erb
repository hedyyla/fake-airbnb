<div class="container host">

  <div style="height:5rem; padding-top: 2rem;" class="host-header">

    <ul class="host-listing-display">
      <li>
        <%= link_to "Listings", host_bookings_path %>
      </li>
      <li>
        <%= link_to "Stats",  stats_bookings_path %>
      </li>
    </ul>
  </div>

  <hr>

  <div class="booking_link" style="height:5rem; padding-top: 2rem;">
    <%= link_to "All", host_bookings_path   %>
    <%= link_to "Upcoming", host_bookings_path(filter: "upcoming")   %>
    <%= link_to "Pending", host_bookings_path(filter: "pending")   %>
  </div>

  <% @bookings.each do |booking| %>
      <div class="wrapper card mb-3">
        <div class="row g-0">
          <div class="col-4">
            <div class="listing-image rounded">
              <% booking.listing.photos.each do |photo| %>
                <div><%= cl_image_tag(photo.key, width: 250, height: 200, crop: :fill) %></div>
              <% end %>
            </div>
          </div>

          <div class="col-8 mt-3">
            <div class="card-body">
              <h2><%= booking.listing.location %></h2>
              <p><%= booking.start_date.strftime("%d %b %Y")%> - <%= booking.end_date.strftime("%d %b %Y") %></p>
              <p>Guest: <%= booking.guest.first_name %></p>


              <% if booking.status == "confirmed" %>
                <p>Status: Confirmed</p>
              <% elsif booking.status == "declined" %>
                <p>Status: Declined</p>
              <% elsif booking.status == "pending" %>
                <p>Status: Pending</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>
