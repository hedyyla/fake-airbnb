<div class="container host">

  <div class="navbar host-nav mt-4">
    <div class="dropdown">

      <button class="btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        All Listings
      </button>
      <ul class="dropdown-menu mt-2">
        <li><a class="dropdown-item" href="#">Confirmed</a></li>
        <li><a class="dropdown-item" href="#">Pending</a></li>
        <li><a class="dropdown-item" href="#">Declined</a></li>
      </ul>
    </div>

    <button class="btn">
      <%= link_to "Stats",  stats_bookings_path %>
    </button>
  </div>



  <% User.joins(:bookings).joins(:listings).where.not(id: current_user.id).distinct.each do |user| %>
    <% user.bookings.each do |booking| %>
      <div class="wrapper card mb-3">
        <div class="row g-0">
          <div class="col-4">
            <%# <div class="image">
              <img src="https://images.unsplash.com/photo-1449844908441-8829872d2607?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="" class="img-fluid rounded-start">
            </div> %>

            <div class="test-image">
              <% booking.listing.photos.each do |photo| %>
                <%= cl_image_tag(photo.key, width: 400, height: 300, crop: :fill) %>
              <% end %>
            </div>
          </div>

          <div class="col-8 mt-3">
            <div class="card-body">
              <h2><%= booking.listing.location %></h2>
              <p>From: <%= booking.start_date %></p>
              <p>End: <%= booking.end_date %></p>
              <h4>Guest: <%= booking.guest.first_name %></h4>
              <%# <>Status: <%= booking.stats %>

              <% if booking.status == "confirmed" %>
                <p>Status: Confirmed</p>
              <% elsif booking.status == "declined" %>
                <p>Status: Declined</p>
              <% elsif booking.status == "pending" %>
                <p>Status: Pending</p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
</div>
