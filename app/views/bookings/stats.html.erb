<div class="container host">

  <div style="height:5rem; padding-top: 2rem;" class="host-header">

    <ul class="host-listing-display">
      <li>
        <%= link_to "Listings", host_bookings_path, style:"font-weight: #{current_page?(host_bookings_path) ? 'bold' : 'normal'}" %>
      </li>
      <li>
        <%= link_to "Stats",  stats_bookings_path, style:"font-weight: #{current_page?(stats_bookings_path) ? 'bold' : 'normal'}" %>
      </li>
    </ul>
  </div>


  <div>
    <div class="earning-title">
      <h2>Earnings</h2>
    </div>

    <hr>

    <div class="mt-4 ">
      <div style="height:5rem; padding-top: 2rem;" class="booking_link">
    <%= link_to "Lifetime", stats_bookings_path, style:"font-weight: #{params[:filter].present? ? 'normal' : 'bold'}" %>
    <%= link_to "Current Year", stats_bookings_path(filter: "current_year"), style:"font-weight: #{params[:filter] != 'current_year' ? 'normal' : 'bold'}"  %>
    <%= link_to "Current Month", stats_bookings_path(filter: "current_month"), style:"font-weight: #{params[:filter] != 'current_month' ? 'normal' : 'bold'}"   %>
  </div>

    </div>

    <div class="mt-4 earning-total">
      <h1>$<%=  Booking.total_earnings(@bookings).round(2) %></h1>
      <p class="earning-description">Booked earnings for 2023</p>
    </div>



  </div>
</div>
